#custom_wpcommon.conf
#https://wpstack.site/wp-admin/install.php
#https://wpstack.site/wp-admin/upgrade.php
#https://wpstack.site/xmlrpc.php

location = /xmlrpc.php {
        deny all;
        error_page 403 =404 / ;
        #access_log off;
        #log_not_found off;
}

location ^~ /wp-admin/install.php {
    deny all;
    error_page 403 =404 / ;
}

location ^~ /wp-admin/upgrade.php {
    deny all;
    error_page 403 =404 / ;
}
